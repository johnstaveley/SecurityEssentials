@model SecurityEssentials.ViewModel.LandingViewModel
@{
    ViewBag.Title = "Home - Landing Page";
    ViewBag.Active = "Home";
}

<div class="container">
    <div>
        <div>
            <div class="row">
                <div class="col-md-12">&nbsp;</div>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.StatusMessage))
            {
                <div class="row">
                    <div class="col-md-8 alert">@ViewBag.StatusMessage</div>
                </div>}
            <div class="row">
                <div class="col-md-12">
                    Welcome back @Html.DisplayFor(m => m.FirstName) <span id="LastAccountActivity">the last activity logged against your account was @Html.DisplayFor(m => m.LastAccountActivity).</span> Go @Html.ActionLink("here", "Log", "User", new {Id = Model.UserId}, null) for a full list of your account activity. If you notice any suspicious activity on your account then you should notify your system administrator immediately.
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    If you notice any suspicious activity then you should notify your system administrator immediately.
                </div>
            </div>
        </div>
    </div>
</div>